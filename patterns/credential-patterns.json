{
  "patterns": [
    {
      "name": "AWS Access Key",
      "regex": "AKIA[0-9A-Z]{16}",
      "severity": "HIGH",
      "description": "AWS Access Key ID",
      "example": "AKIA1234567890ABCDEF"
    },
    {
      "name": "AWS Secret Key",
      "regex": "(?<![A-Za-z0-9/+=])[A-Za-z0-9/+=]{40}(?![A-Za-z0-9/+=])",
      "severity": "HIGH",
      "description": "AWS Secret Access Key (40 chars base64)",
      "example": "wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY"
    },
    {
      "name": "GitHub Personal Access Token",
      "regex": "ghp_[A-Za-z0-9_]{36,255}",
      "severity": "HIGH",
      "description": "GitHub personal access token",
      "example": "ghp_1234567890abcdefghijklmnopqrstuvwxyzABCDEF"
    },
    {
      "name": "GitHub OAuth Token",
      "regex": "gho_[A-Za-z0-9_]{36,255}",
      "severity": "HIGH",
      "description": "GitHub OAuth access token",
      "example": "gho_1234567890abcdefghijklmnopqrstuvwxyzABCDEF"
    },
    {
      "name": "Private SSH Key",
      "regex": "-----BEGIN (RSA|DSA|EC|OPENSSH) PRIVATE KEY-----",
      "severity": "CRITICAL",
      "description": "Private SSH/RSA key",
      "example": "-----BEGIN RSA PRIVATE KEY-----"
    },
    {
      "name": "Generic API Key",
      "regex": "(?i)(api[_-]?key|apikey)['\"]?\\s*[:=]\\s*['\"][A-Za-z0-9_\\-]{20,}['\"]",
      "severity": "HIGH",
      "description": "Generic API key in code",
      "example": "api_key=\"sk_live_abc123xyz456\""
    },
    {
      "name": "Password in Code",
      "regex": "(?i)(password|passwd|pwd)['\"]?\\s*[:=]\\s*['\"][^'\"\\s]{8,}['\"]",
      "severity": "CRITICAL",
      "description": "Hard-coded password",
      "example": "password=\"MySecretPass123\""
    },
    {
      "name": "MongoDB Connection String",
      "regex": "mongodb(\\+srv)?://[^:]+:[^@]+@[^\\s]+",
      "severity": "CRITICAL",
      "description": "MongoDB connection string with credentials",
      "example": "mongodb://user:password@host:27017/db"
    },
    {
      "name": "PostgreSQL Connection",
      "regex": "postgres://[^:]+:[^@]+@[^\\s]+",
      "severity": "CRITICAL",
      "description": "PostgreSQL connection string with credentials",
      "example": "postgres://user:pass@localhost/db"
    },
    {
      "name": "Slack Token",
      "regex": "xox[baprs]-[0-9a-zA-Z-]+",
      "severity": "HIGH",
      "description": "Slack bot/user/app token",
      "example": "xoxb-123456789012-1234567890123-abcdefghijklmnopqrstuvwx"
    },
    {
      "name": "Google API Key",
      "regex": "AIza[0-9A-Za-z_\\-]{35}",
      "severity": "HIGH",
      "description": "Google API key",
      "example": "AIzaSyD1234567890abcdefghijklmnopqrstuvwxyz"
    },
    {
      "name": "Stripe Secret Key",
      "regex": "sk_(live|test)_[0-9a-zA-Z]{24,}",
      "severity": "HIGH",
      "description": "Stripe secret API key",
      "example": "sk_live_abc123def456ghi789jkl012"
    },
    {
      "name": "Twilio API Key",
      "regex": "SK[0-9a-fA-F]{32}",
      "severity": "HIGH",
      "description": "Twilio API key",
      "example": "SK1234567890abcdef1234567890abcdef"
    },
    {
      "name": "JWT Token",
      "regex": "eyJ[A-Za-z0-9_-]{10,}\\.[A-Za-z0-9_-]{10,}\\.[A-Za-z0-9_-]{10,}",
      "severity": "MEDIUM",
      "description": "JSON Web Token",
      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIn0.dozjgNryP4J3jVmNHl0w5N_XgL0n3I9PlFUP0THsR8U"
    },
    {
      "name": "Generic Secret",
      "regex": "(?i)(secret|token|key)['\"]?\\s*[:=]\\s*['\"][A-Za-z0-9_\\-]{20,}['\"]",
      "severity": "MEDIUM",
      "description": "Generic secret/token variable",
      "example": "secret=\"abc123xyz456def789\""
    }
  ],
  "false_positives": [
    "example.com",
    "localhost",
    "127.0.0.1",
    "YOUR_API_KEY",
    "YOUR_SECRET_KEY",
    "REPLACE_ME",
    "TODO",
    "CHANGEME",
    "placeholder",
    "dummy",
    "test123",
    "password123",
    "xxxxxxxx"
  ]
}
